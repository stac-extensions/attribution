{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/attribution/v0.1.0/schema.json#",
  "title": "Attribution Extension",
  "description": "STAC Attribution Extension for STAC Items and STAC Collections.",
  "type": "object",
  "required": [
    "stac_extensions"
  ],
  "properties": {
    "stac_extensions": {
      "type": "array",
      "contains": {
        "const": "https://stac-extensions.github.io/attribution/v0.1.0/schema.json"
      }
    }
  },
  "oneOf": [
    {
      "type": "object",
      "required": [
        "type",
        "properties",
        "assets"
      ],
      "properties": {
        "type": {
          "const": "Feature"
        }
      },
      "anyOf": [
        {
          "$ref": "#/definitions/properties"

        },
        {
          "$ref": "#/definitions/assets"
        }
      ]
    },
    {
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "const": "Collection"
        }
      },
      "anyOf": [
        {
          "$ref": "#/definitions/properties"
        },
        {
          "$ref": "#/definitions/assets"
        },
        {
          "required": [
            "item_assets"
          ],
          "properties": {
            "item_assets": {
              "$ref": "#/definitions/assets"
            }
          }
        },
        {
          "required": [
            "summaries"
          ],
          "properties": {
            "summaries": {
              "type": "object",
              "required": [
                "attribution"
              ],
              "properties": {
                "attribution": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/attribution"
                  }
                }
              }
            }
          }
        }
      ]
    }
  ],
  "definitions": {
    "properties": {
      "required": [
        "attribution"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/fields"
        }
      ]
    },
    "assets": {
      "required": [
        "assets"
      ],
      "properties": {
        "assets": {
          "$ref": "#/definitions/asset_contains"
        }
      }
    },
    "asset_contains": {
      "type": "object",
      "not": {
        "additionalProperties": {
          "not": {
            "$ref": "#/definitions/properties"
          }
        }
      }
    },
    "fields": {
      "type": "object",
      "properties": {
        "attribution": {
          "$ref": "#/definitions/attribution"
        }
      }
    },
    "attribution": {
      "type": "string",
      "minLength": 1
    }
  }
}
